<?xml version="1.0" encoding="UTF-8"?>
<gdml_simple_extension xmlns:gdml_simple_extension="http://www.example.org"
    xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"          
    xs:noNamespaceSchemaLocation="./extSchema/testExtension.xsd"> 

    <extension>
        <color name="test_color"  R="0.1"  G="0.2"  B="0.3"  A="1.0" />	
    </extension>

    <define>      
        <!-- world -->
        <constant name="world_side" value="1000" />
        <constant name="world_x" value="world_side" />
        <constant name="world_y" value="world_side" />
        <constant name="world_z" value="world_side" />

        <!-- test volume -->
        <constant name="test_box_size" value="100.0"/>
        <constant name="layer_size" value="20.0"/>
        <position name="test_position1" x="0" y="0" z="100"/>
        <position name="test_position2" x="0" y="0" z="300"/>
    </define>

    <materials>
        <!-- elements -->
        <element name="Argon_e" Z="18.0" N="40" >
            <atom type="A" unit="g/mol" value="39.9480" />
        </element>

        <element  name="Nitrogen_e"  Z="7.0"  N="14" >
            <atom type="A" unit="g/mol" value=" 14.0100" />
        </element>

        <element  name="Oxygen_e"  Z="8.0"  N="16" >
            <atom type="A" unit="g/mol" value=" 16.0000" />
        </element>

        <!-- materials -->
        <material  name="Air"  >
            <D type="density" unit="g/cm3" value="0.0012"/>
            <fraction n="0.7803"  ref="Nitrogen_e"/>
            <fraction n="0.2103"  ref="Oxygen_e"/>
            <fraction n="0.0094"  ref="Argon_e"/>
        </material>

        <material Z="13" name="ALU" state="solid">
            <D unit="g/cm3" value="2.7"/>
            <atom unit="g/mole" value="26.98"/>
        </material>

    </materials>

    <solids>
        <!-- world -->
        <box lunit="mm" 
            aunit="degree"
            name="world_box"
            x="world_x"  
            y="world_y"  
            z="world_z" />

        <!-- test volume -->
        <box lunit="mm"
            name="test_box"
            x="test_box_size"
            y="test_box_size"
            z="test_box_size"/>
        
        <box lunit="mm"
            name="layer_box"
            x="test_box_size"
            y="test_box_size"
            z="layer_size"/>

    </solids>

    <structure>
        <volume name="test_volume1">
            <materialref ref="Air"/>
            <solidref ref="test_box"/>
            <auxiliary auxtype="Color" auxvalue="Blue"/>

            <auxiliary auxtype="FastSimModel" auxvalue="MuonModel"/>
            
            <auxiliary auxtype="Scorer" auxvalue="multiScorer">
                <auxiliary auxtype="PrimitiveName" auxvalue="NofSecondary">
                    <auxiliary auxtype="Depth" auxvalue="0"/>
                    <auxiliary auxtype="ParticleFilter" auxvalue="mu+"/>
                    <auxiliary auxtype="ParticleFilter" auxvalue="mu-"/> 
                </auxiliary>
            </auxiliary>

            <!-- color extension element -->	
            <colorref ref="test_color"/> 
        </volume>
        
        <volume name="test_layer2">
            <materialref ref="ALU"/>
            <solidref ref="layer_box"/>
            <auxiliary auxtype="SensDet" auxvalue="tracker">
                <auxiliary auxtype="HitCollection" auxvalue="trackerHit"/>
            </auxiliary>

        </volume>

        <volume name="test_volume2">
            <materialref ref="Air"/>
            <solidref ref="test_box"/>
            <replicavol number="5">
                <volumeref ref="test_layer2"/>
                <replicate_along_axis>
                    <direction z="1"/>
                    <width value="20" unit="mm"/>
                    <offset value="0" unit="mm"/>
                </replicate_along_axis>
            </replicavol>

            <!-- color extension element -->	
            <colorref ref="test_color"/> 
        </volume>

        <volume name="world">
            <materialref ref="Air"/>
            <solidref ref="world_box"/>
            <physvol>
                <volumeref ref="test_volume1"/>
                <positionref ref="test_position1"/>
            </physvol>
            <physvol>
                <volumeref ref="test_volume2"/>
                <positionref ref="test_position2"/>
            </physvol>

        </volume>
    </structure>

    <setup name="Default" version="1.0">
        <world ref="world"/>
    </setup>

</gdml_simple_extension>
